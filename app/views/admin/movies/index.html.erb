<h2> Movie List</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新添一部电影", new_admin_movie_path, class:"btn btn-lg btn-danger") %>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Movie Pic</th>
      <th>Name</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.id %></td>
      <td>
        <%= link_to admin_movie_path(movie) do %>
          <% if movie.image.present? %>
            <%= image_tag(movie.image.thumb.url, class:"thumbnail") %>
          <% else %>
            <%= image_tag("http://img.wmtp.net/wp-content/uploads/52eb1aac1ae1b176.jpg600x600.jpg", class:"thumbnail") %>
          <% end %>
        <% end %>
      </td>
      <td><%= movie.title %></td>
      <td>
        <%= link_to("edit", edit_admin_movie_path(movie), class:"btn-sm btn-info") %>
        <%= link_to("delete", admin_movie_path(movie), method: :delete, class:"btn-sm btn-danger") %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>
