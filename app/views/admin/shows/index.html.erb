<h2> Show List</h2>
<div class="pull-right" style="padding-bottom: 20px;">
  <%= link_to("新添一个场次", new_admin_show_path, class:"btn btn-lg btn-danger") %>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Movie Pic</th>
      <th>场次</th>
      <th>价格</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% @shows.each do |show| %>
    <tr>
      <td><%= show.id %></td>
      <td>
        <%= link_to "#" do %>
          <% if show.movie.image.present? %>
            <%= image_tag(show.movie.image.thumb.url, class:"thumbnail") %>
          <% else %>
            <%= image_tag("http://img.wmtp.net/wp-content/uploads/52eb1aac1ae1b176.jpg600x600.jpg", class:"thumbnail") %>
          <% end %>
        <% end %>
      </td>
      <td><%= show.timetable %></td>
      <td><%= show.price %></td>
      <td>
        <%= link_to("edit", edit_admin_show_path(show), class:"btn-sm btn-info") %>
        <%= link_to("delete", admin_show_path(show), method: :delete, class:"btn-sm btn-danger") %>

      </td>
    </tr>
    <% end %>
  </tbody>
</table>
