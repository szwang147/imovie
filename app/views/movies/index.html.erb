<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-xs-6 col-md-3">
      <%= link_to movie_path(movie) do %>
      <%= render_movie_image_present(movie) %>
      <%= movie.title %>
      <% end %>
      <%= link_to("购票", movie_shows_path(movie), class:"btn btn-sm btn-danger") %>
    </div>
  <% end %>
</div>
