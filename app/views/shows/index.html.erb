<h2> Show List</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">Movie Pic</th>
      <th>场次</th>
      <th>价格</th>
      <th>Option</th>
    </tr>
  </thead>
  <tbody>
    <% @shows.each do |show| %>
    <tr>
      <td><%= show.id %></td>
      <td>
        <%#= link_to admin_movie_path(show.movie) do %>
          <%# if show.movie.image.present? %>
            <%#= image_tag(show.movie.image.thumb.url, class:"thumbnail") %>
          <%# else %>
            <%#= image_tag("http://img.wmtp.net/wp-content/uploads/52eb1aac1ae1b176.jpg600x600.jpg", class:"thumbnail") %>
          <%# end %>
        <%# end %>
      </td>
      <td><%= show.timetable %></td>
      <td><%= show.price %></td>
      <td>
        <%= link_to("选择这场", movie_show_seats_path(@movie, show), class:"btn-sm btn-info") %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<div class="text-center">
  <%= will_paginate @shows %>
</div>
